global:
  scrape_interval: 15s
  evaluation_interval: 15s

# AtlasTrinity Standalone Binary Mode
# Metrics are exposed locally, no Docker networking required

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'atlastrinity'
    metrics_path: '/'
    static_configs:
      - targets: ['localhost:8001']
