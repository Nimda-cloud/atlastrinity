# =============================================================================
# GLOBAL MODEL CONFIGURATION
# =============================================================================
# Single source of truth for all models used across the system
# Change defaults here to switch models globally

models:
  # Default models for different purposes
  # Using gpt-4o as default for GitHub Copilot API
  # You can change these to your preferred models (e.g., "claude-3.5-sonnet", "gpt-4o-mini", etc.)
  default: "gpt-4o"                    # Default LLM for agents
  vision: "gpt-4o"                     # Vision/multimodal tasks
  reasoning: "gpt-4o"                  # Specialized deep reasoning
  code_analysis: "gpt-4o"              # Code review and analysis
  consolidation: "gpt-4o"              # Memory consolidation
  
  # Vibe binary defaults (external CLI tool)
  vibe_default: "devstral-2"           # Native model for Vibe CLI
  
  # Fallbacks (used when primary unavailable)
  fallback: "gpt-4o"                   # Fallback model
  
  # Agents inherit from models.default unless overridden

agents:
  atlas:
    # model: inherited from models.default 
    deep_model: ""          # Deep chat model for complex logic, set in your config.yaml
    temperature: 0.7
    max_tokens: 2000                 # Standard chat/task mode
    max_tokens_deep: 12000           # Deep persona mode (increased from 8000)

  tetyana:
    # model: inherited from models.default
    reasoning_model: ""       # Tool selection reasoning, set in your config.yaml
    vision_model: ""             # Vision tasks, set in your config.yaml
    temperature: 0.5
    max_tokens: 2000

  grisha:
    # Three-Phase Verification Architecture:
    # Phase 1: Strategy planning (what to verify, which tools)
    strategy_model: ""        # Deep reasoning for verification strategy, set in your config.yaml
    
    # Phase 2: Tool selection & execution (MCP server interaction)
    # model: inherited from models.default
    
    # Phase 3: Result analysis & verdict
    vision_model: ""             # Vision/multimodal verification, set in your config.yaml
    verdict_model: ""          # Final verdict reasoning, set in your config.yaml
    
    # General settings
    temperature: 0.3
    max_tokens: 1500
    
    # Two-Phase Verification Sequential-Thinking (NEW)
    verification_reasoning_model: ""  # Model for logical verdict analysis, set in your config.yaml
    verification_temperature: 0.2          # Low temp for precise reasoning
    verification_max_tokens: 4000          # Sufficient for deep analysis

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================

mcp_enhanced:
  retry_attempts: 3
  connection_timeout: 3600

mcp:
  # === TIER 1: MUST-HAVE (Ядро системи) ===
  macos_use:
    enabled: true
    permissions:
      accessibility: true
      screen_recording: true

  filesystem:
    enabled: true
    deny_write_repo: true
    repo_write_allowed_subdir: .atlastrinity_runtime
    deny_write_paths: []
    allowed_paths:
      - ${HOME}
      - /tmp

  sequential_thinking:
    enabled: true
    model: ""                         # Explicit model for deep reasoning - SET THIS
    max_history_size: 1000
    temperature: 0.2               # Precise reasoning
    max_tokens: 4000               # Sufficient for complex analysis
    
    # Grisha Verification Usage
    grisha_phase1_thoughts: 3      # Goal analysis (what to verify, which tools)
    grisha_phase2_thoughts: 4      # Verdict formation (logical analysis of evidence)

  # === TIER 2: HIGH PRIORITY (Рекомендовані) ===
  vibe:
    enabled: true
    binary: vibe
    # Default model defined in vibe_config.toml 
    workspace: ${CONFIG_ROOT}/vibe_workspace
    timeout_s: 3600
    max_output_chars: 500000
    disallow_interactive: true

  memory:
    enabled: true
    # Path configured in database_management.chromadb.path section below
    collection_name: atlastrinity_memory

  graph:
    enabled: true

  redis:
    enabled: true
    # URL configured in database_management.redis.url section below

  duckduckgo_search:
    enabled: true

  golden_fund:
    enabled: true
    # Golden Fund Knowledge Base (8 tools): Semantic search, entity probing, 
    # data ingestion, analysis storage, blob management
    # Data stored in ~/.config/atlastrinity/data/golden_fund/

  data_analysis:
    enabled: true
    # Pandas-based Data Analysis Engine (8 tools): read_metadata, analyze_dataset,
    # generate_statistics, create_visualization, data_cleaning, data_aggregation,
    # interpret_column_data, run_pandas_code
    # Supports CSV, Excel, JSON, Parquet

  github:
    enabled: true
    # Advanced GitHub API: Pull Requests, Issues, Search, Repository Management
    # Requires GITHUB_TOKEN in your .env file

  whisper_stt:
    enabled: true
    # Model and language configured in voice.stt section below

  devtools:
    enabled: true
    # All tools enabled by default
    ruff_enabled: true
    oxlint_enabled: true
    knip_enabled: true
    pyrefly_enabled: true
    inspector_enabled: true
    health_check_enabled: true

  # === TIER 3: ADDITIONAL (Додаткові) ===
  puppeteer:
    enabled: true
    headless: true

  # === TIER 4: SPECIALIZED (Спеціалізовані / Дебаг) ===
  chrome_devtools:
    enabled: true

  context7:
    enabled: true # External documentation server

