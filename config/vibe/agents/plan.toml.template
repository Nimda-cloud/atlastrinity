# Plan agent configuration for Vibe
# Conservative mode: read-only exploration, write/execute require confirmation

active_model = "deepseek-v3"
system_prompt_id = "cli"

# Read-only tools — safe for exploration
[tools.read_file]
permission = "always"

[tools.grep]
permission = "always"

[tools.ls]
permission = "always"

# Write/execute tools — require confirmation during planning
[tools.bash]
permission = "ask"

[tools.write_file]
permission = "ask"

[tools.search_replace]
permission = "ask"

# MCP Tools — analysis only
[tools.devtools_devtools_lint_python]
permission = "always"

[tools.devtools_devtools_run_global_lint]
permission = "always"
