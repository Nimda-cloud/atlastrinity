# Plan agent configuration for Vibe
# Conservative mode for planning and exploration

# Use the default model from main config
active_model = "devstral-2"
system_prompt_id = "cli"

# Optimize: Exploration only, no weights or heavy modifications
enabled_tools = ["bash", "read_file", "grep"]
disabled_tools = ["write_file", "search_replace"]

[tools.bash]
permission = "ask"

[tools.write_file]
permission = "ask"

[tools.search_replace]
permission = "ask"

[tools.read_file]
permission = "always"

[tools.grep]
permission = "always"

[tools."*"]
permission = "ask"
