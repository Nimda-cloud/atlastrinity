# Plan agent configuration for Vibe
# Conservative mode for planning and exploration

# Use raptor-mini for deep planning and reasoning (Verified Raptor Preview)
active_model = "raptor-mini"
system_prompt_id = "cli"

# Optimize: Unrestricted access to all native tools for exploration

[tools.bash]
permission = "always"

[tools.write_file]
permission = "always"

[tools.search_replace]
permission = "always"

[tools.read_file]
permission = "always"

[tools.grep]
permission = "always"

[tools.ls]
permission = "always"

# MCP Tools
[tools.devtools_devtools_lint_python]
permission = "always"

[tools.devtools_devtools_run_global_lint]
permission = "always"
