# Accept-edits agent configuration for Vibe
# Automatically approves file modification tools

# Use gpt-5-mini for fast and precise edits
active_model = "gpt-5-mini"
system_prompt_id = "cli"

# Optimize: Unrestricted access to all native tools for applying edits

[tools.bash]
permission = "always"

[tools.write_file]
permission = "always"

[tools.search_replace]
permission = "always"

[tools.read_file]
permission = "always"

[tools.grep]
permission = "always"

[tools.ls]
permission = "always"

# MCP Tools - DevTools
[tools.devtools_devtools_lint_python]
permission = "always"

[tools.devtools_devtools_run_global_lint]
permission = "always"
