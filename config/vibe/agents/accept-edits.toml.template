# Accept-edits agent configuration for Vibe
# Automatically approves file modification tools

# Use the default model from main config
# active_model = "devstral-2"
system_prompt_id = "cli"

# Optimize: Unrestricted access to all native tools for applying edits

[tools.bash]
permission = "always"

[tools.write_file]
permission = "always"

[tools.search_replace]
permission = "always"

[tools.read_file]
permission = "always"

[tools.grep]
permission = "always"

[tools."*"]
permission = "always"
