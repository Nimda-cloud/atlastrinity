# Uses default model from global config if not set
# active_model = "mistral-large-latest" 
system_prompt_id = "cli"

# Empty list means all tools enabled (unless disabled explicitly)
enabled_tools = []

[tools.bash]
permission = "always"

[tools.write_file]
permission = "always"

[tools.read_file]
permission = "always"

[tools.grep]
permission = "always"

[tools.search_replace]
permission = "always"

# Allow MCP tools by default or valid patterns
# Wildcard for all MCP tools available to this agent
[tools."*"]
permission = "always"
