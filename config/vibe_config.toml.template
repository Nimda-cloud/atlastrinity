# Optimized Vibe Configuration Template
# Based on official documentation: https://docs.mistral.ai/mistral-vibe/introduction/configuration

# Active model alias
active_model = "codestral-latest"

# System prompt ID
system_prompt_id = "default"

# Tool Patterns
enabled_tools = []
disabled_tools = []

# Auto-Update
enable_auto_update = true

# Providers
[[providers]]
name = "mistral"
api_base = "https://api.mistral.ai/v1"
api_key_env_var = "MISTRAL_API_KEY"
api_style = "mistral"
backend = "mistral"

# Models
[[models]]
name = "codestral-latest"
provider = "mistral"
alias = "codestral-latest"
temperature = 0.0

# Tool Permissions
[tools.bash]
permission = "ask"

[tools.write_file]
permission = "ask"

[tools.read_file]
permission = "always"

[tools.grep]
permission = "always"

[tools.search_replace]
permission = "ask"

# MCP Servers
[[mcp_servers]]
name = "xcodebuild"
transport = "stdio"
command = "/usr/local/bin/node"
args = ["/Users/hawk/Documents/GitHub/atlastrinity/vendor/XcodeBuildMCP/.smithery/stdio/index.cjs"]

[[mcp_servers]]
name = "devtools"
transport = "stdio"
command = "/bin/sh"
