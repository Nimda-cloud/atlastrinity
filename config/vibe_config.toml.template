# Optimized Vibe Configuration Template
# Based on official documentation: https://docs.mistral.ai/mistral-vibe/introduction/configuration

# Active model alias (devstral-2 recommended - lower rate limits than codestral-latest)
active_model = "devstral-2"

# System prompt ID
system_prompt_id = "default"

# Tool Patterns
enabled_tools = []
disabled_tools = []

# Auto-Update
enable_auto_update = true

# Providers
[[providers]]
name = "mistral"
api_base = "https://api.mistral.ai/v1"
api_key_env_var = "MISTRAL_API_KEY"
api_style = "mistral"
backend = "mistral"

[[providers]]
name = "openrouter"
api_base = "https://openrouter.ai/api/v1"
api_key_env_var = "OPENROUTER_API_KEY"
api_style = "openai"
backend = "generic"

# Models
[[models]]
name = "devstral-2"
provider = "mistral"
alias = "devstral-2"
temperature = 0.0

[[models]]
name = "mistralai/devstral-2512:free"
provider = "openrouter"
alias = "devstral-openrouter"
temperature = 0.2

# Tool Permissions
[tools.bash]
permission = "ask"

[tools.write_file]
permission = "ask"

[tools.read_file]
permission = "always"

[tools.grep]
permission = "always"

[tools.search_replace]
permission = "ask"

# MCP Servers are loaded from ~/.config/atlastrinity/mcp/config.json
# See mcp_servers.json.template for full configuration
