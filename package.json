{
  "name": "atlastrinity",
  "version": "1.0.0",
  "description": "Autonomous Recursive Agentic System for macOS",
  "main": "dist/main/main.js",
  "type": "module",
  "scripts": {
    "setup": "python3 scripts/setup_dev.py",
    "fresh-install": "./scripts/fresh_install.sh",
    "clean": "./scripts/clean-cache.sh",
    "clean:full": "python3 scripts/clear_experience_fixed.py",
    "clean:memory": "python3 scripts/clear_experience_fixed.py",
    "config:sync": "node scripts/sync_config_templates.js",
    "dev": "npm run clean && concurrently \"npm run dev:brain\" \"npm run dev:electron\" \"npm run dev:renderer\" --kill-others",
    "dev:electron": "tsc -p tsconfig.main.json && NODE_ENV=development electron .",
    "dev:renderer": "vite",
    "dev:brain": "export PYTHONPATH=$PYTHONPATH:./src && .venv/bin/python -W ignore -m brain.server",
    "build": "npm run build:renderer && npm run build:electron",
    "build:electron": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:mac": "npm run build && electron-builder --mac --arm64",
    "build:dmg": "npm run build && electron-builder --mac dmg",
    "build:ci": "npm run lint:ts && npm run build",
    "start": "electron .",
    "python:install": ".venv/bin/pip install -r requirements.txt",
    "python:brain": "export PYTHONPATH=$PYTHONPATH:./src && .venv/bin/python -W ignore -m brain.server",
    "python:brain:custom": "unset MACOSX_DEPLOYMENT_TARGET SDKROOT SYSTEM_VERSION_COMPAT && export PYTHONPATH=$PYTHONPATH:./src && .venv/bin/python -W ignore -m brain.server",
    "build:mac:custom": "./scripts/build_mac_custom.sh",
    "build:mac:fast": "./scripts/build_mac_custom.sh --fast",
    "test:ci": "pytest -q --cov=src --cov-report=xml --cov-report=term --junit-xml=pytest-results.xml",
    "lint:all": "npm run lint:py && npm run lint:ts && npm run lint:unused && npm run lint:security",
    "lint:py": ".venv/bin/ruff check . && .venv/bin/pyrefly check && .venv/bin/mypy src --explicit-package-bases && .venv/bin/bandit -r src -ll && .venv/bin/xenon --max-absolute C --max-modules C --max-average B src",
    "lint:ts": "tsc --noEmit && oxlint --ignore-path .gitignore && eslint 'src/**/*.{ts,tsx}' --max-warnings=0",
    "lint:unused": "knip",
    "lint:security": ".venv/bin/safety check && .venv/bin/detect-secrets scan && npm audit --audit-level=high",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json}'",
    "format:write": "prettier --write 'src/**/*.{ts,tsx,json}' && .venv/bin/ruff format .",
    "mcp:status": "export PYTHONPATH=$PYTHONPATH:. && python scripts/check_mcp_health.py",
    "mcp:status:json": "export PYTHONPATH=$PYTHONPATH:. && python scripts/check_mcp_health.py --json",
    "mcp:validate": "python -c \"from src.brain.config_validator import config_validator; results = config_validator.validate_all(); config_validator.log_results(results)\"",
    "verify": "python3 scripts/verify_environment.py",
    "diagram:auto-update": "export PYTHONPATH=$PYTHONPATH:./src && .venv/bin/python scripts/update_diagrams_mcp.py",
    "diagram:export": "mkdir -p .agent/docs/diagrams && cd .agent/docs/diagrams && mmdc -i ../mcp_architecture_diagram.md -o mcp_architecture.png -t dark -b transparent",
    "diagram:export:all": "mkdir -p .agent/docs/diagrams && cd .agent/docs/diagrams && mmdc -i ../mcp_architecture_diagram.md -o mcp_architecture.png -t dark -b transparent && mmdc -i ../mcp_architecture_diagram.md -o mcp_architecture.svg -t dark -b transparent",
    "diagram:preview": "open .agent/docs/mcp_architecture_diagram.md",
    "diagram:update-and-export": "npm run diagram:auto-update && npm run diagram:export"
  },
  "author": "AtlasTrinity Team",
  "license": "MIT",
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.4.1",
    "@modelcontextprotocol/inspector": "^0.18.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "knip": "^5.82.1",
    "oxlint": "^1.41.0",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@modelcontextprotocol/server-filesystem": "^2025.12.18",
    "@modelcontextprotocol/server-github": "^2025.4.8",
    "@modelcontextprotocol/server-memory": "^2025.11.25",
    "@modelcontextprotocol/server-puppeteer": "^2025.5.12",
    "@modelcontextprotocol/server-sequential-thinking": "^2025.12.18",
    "chrome-devtools-mcp": "^0.12.1",
    "cloudinary": "^2.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stripe": "^20.1.1"
  },
  "build": {
    "appId": "com.atlastrinity.app",
    "productName": "AtlasTrinity",
    "directories": {
      "output": "release"
    },
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "minimumSystemVersion": "26.3",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "files": [
      "dist/**/*",
      "design-system/**/*"
    ],
    "extraResources": [
      {
        "from": "src/brain",
        "to": "brain",
        "filter": [
          "**/*.py",
          "!**/__pycache__"
        ]
      },
      {
        "from": "providers",
        "to": "providers",
        "filter": [
          "**/*.py"
        ]
      },
      {
        "from": "src/mcp_server",
        "to": "mcp_server",
        "filter": [
          "**/*.py",
          "**/*.json",
          "!**/__pycache__"
        ]
      },
      {
        "from": "dist_venv",
        "to": ".venv",
        "filter": [
          "**/*",
          "!**/__pycache__",
          "!**/*.pyc"
        ]
      },
      {
        "from": "requirements.txt",
        "to": "requirements.txt"
      },
      {
        "from": ".env",
        "to": ".env"
      },
      {
        "from": "vendor/mcp-server-macos-use/.build/release/mcp-server-macos-use",
        "to": "bin/mcp-server-macos-use"
      },
      {
        "from": "config/config.yaml",
        "to": "config.yaml"
      }
    ]
  }
}
