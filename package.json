{
  "name": "atlastrinity",
  "version": "1.0.0",
  "description": "Autonomous Recursive Agentic System for macOS",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=11.0.0"
  },
  "main": "dist/main/main.js",
  "type": "module",
  "scripts": {
    "setup": "python3 src/maintenance/setup_dev.py",
    "fresh-install": "./scripts/fresh_install.sh",
    "clean": "./scripts/clean-cache.sh",
    "clean:full": "python3 src/maintenance/clear_experience_fixed.py",
    "clean:memory": "python3 src/maintenance/clear_experience_fixed.py",
    "clean:gold": "python3 src/maintenance/clean_golden.py",
    "clean:golden": "python3 src/maintenance/clean_golden.py",
    "clean:main": "python3 src/maintenance/clean_main.py",
    "clean:backups": "python3 src/maintenance/clean_backups.py",
    "clean:everything": "npm run clean:golden && npm run clean:main && npm run clean",
    "clean:ever": "npm run clean:everything && npm run clean:backups",
    "backup:gold": "python3 src/maintenance/backup_golden.py",
    "backup:golden": "python3 src/maintenance/backup_golden.py",
    "backup:all": "python3 src/maintenance/backup_all.py",
    "config:sync": "node scripts/sync_config_templates.js",
    "watch:config": ".venv/bin/python src/maintenance/watch_config.py",
    "dev": "npm run clean && python3 src/maintenance/clean_start.py && .venv/bin/python src/maintenance/watch_config.py --sync-only && concurrently \"npm run dev:proxy:copilot\" \"npm run dev:proxy:windsurf\" \"npm run dev:brain\" \"npm run dev:electron\" \"npm run dev:renderer\" \"npm run watch:config\" --kill-others",
    "dev:electron": "sleep 5 && tsc -p tsconfig.main.json && NODE_ENV=development electron . --disable-gpu --disable-hardware-acceleration",
    "dev:renderer": "vite",
    "dev:brain": "export PYTHONPATH=$PYTHONPATH:.:./src && .venv/bin/python -W ignore -m brain.server",
    "dev:proxy:copilot": "COPILOT_API_KEY=$COPILOT_API_KEY .venv/bin/python src/providers/proxy/copilot_vibe_proxy.py --port 8086",
    "dev:proxy:windsurf": "WINDSURF_API_KEY=$WINDSURF_API_KEY WINDSURF_INSTALL_ID=$WINDSURF_INSTALL_ID .venv/bin/python src/providers/proxy/vibe_windsurf_proxy.py --port 8085",
    "build": "npm run build:renderer && npm run build:electron",
    "build:electron": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:mac": "npm run build && electron-builder --mac --arm64",
    "build:dmg": "npm run build && electron-builder --mac dmg",
    "build:ci": "npm run lint:ts && npm run build",
    "start": "electron .",
    "python:install": ".venv/bin/pip install -r requirements.txt",
    "python:brain": "export PYTHONPATH=$PYTHONPATH:.:./src && .venv/bin/python -W ignore -m brain.server",
    "python:brain:custom": "unset MACOSX_DEPLOYMENT_TARGET SDKROOT SYSTEM_VERSION_COMPAT && export PYTHONPATH=$PYTHONPATH:.:./src && .venv/bin/python -W ignore -m brain.server",
    "build:mac:custom": "./scripts/build_mac_custom.sh",
    "build:mac:fast": "./scripts/build_mac_custom.sh --fast",
    "test:ci": "pytest -q --cov=src --cov-report=xml --cov-report=term --junit-xml=pytest-results.xml",
    "lint:all": "npx lefthook run lint:all",
    "lint:py": "npx lefthook run lint:all --commands 05-ruff,06-pyright,07-pyrefly",
    "lint:ts": "npx lefthook run lint:all --commands 01-biome,02-oxlint,03-tsc,04-eslint-typed",
    "lint:types": "npx tsc --noEmit -p tsconfig.json && npx tsc --noEmit -p tsconfig.main.json && npx pyright src scripts",
    "lint:logic": "npx eslint src/main src/renderer",
    "lint:dead": "npx knip && .venv/bin/vulture src scripts vulture_whitelist.py --min-confidence 80 --exclude .venv,dist_venv,node_modules,__pycache__",
    "lint:unused": "npx lefthook run lint:all --commands 11-knip,10-vulture",
    "lint:security": ".venv/bin/safety check --policy-file .safety-policy.yml && .venv/bin/detect-secrets scan --baseline .secrets.baseline --slim && jq 'del(.generated_at)' .secrets.baseline > .secrets.baseline.tmp && mv .secrets.baseline.tmp .secrets.baseline && npm audit --audit-level=high",
    "format:check": "npx @biomejs/biome check src scripts",
    "format:write": "npx @biomejs/biome check --write src scripts && .venv/bin/ruff format .",
    "mcp:status": "export PYTHONPATH=$PYTHONPATH:. && python src/maintenance/mcp_health.py",
    "mcp:status:json": "export PYTHONPATH=$PYTHONPATH:. && python src/maintenance/mcp_health.py --json",
    "mcp:validate": "python -c \"from src.brain.config_validator import config_validator; results = config_validator.validate_all(); config_validator.log_results(results)\"",
    "verify": ".venv/bin/python src/testing/verify_environment.py",
    "diagram:auto-update": "export PYTHONPATH=$PYTHONPATH:.:./src && .venv/bin/python src/maintenance/diagram_sync.py",
    "diagram:export": "mkdir -p .agent/docs/diagrams && cd .agent/docs/diagrams && mmdc -i ../mcp_architecture_diagram.md -o mcp_architecture.png -t dark -b transparent",
    "test:sandbox": ".venv/bin/python src/testing/mcp_sandbox.py --all --chain 2 --json",
    "diagram:export:all": "mkdir -p .agent/docs/diagrams && cd .agent/docs/diagrams && mmdc -i ../mcp_architecture_diagram.md -o mcp_architecture.png -t dark -b transparent && mmdc -i ../mcp_architecture_diagram.md -o mcp_architecture.svg -t dark -b transparent",
    "diagram:preview": "open .agent/docs/mcp_architecture_diagram.md",
    "diagram:update-and-export": "npm run diagram:auto-update && npm run diagram:export"
  },
  "author": "AtlasTrinity Team",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@eslint/js": "^9.39.2",
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@modelcontextprotocol/inspector": "^0.18.0",
    "@types/google.maps": "^3.58.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "knip": "^5.82.1",
    "lefthook": "^2.0.16",
    "oxlint": "^1.43.0",
    "pyright": "^1.1.408",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@modelcontextprotocol/server-filesystem": "^2025.12.18",
    "@modelcontextprotocol/server-github": "^2025.4.8",
    "@modelcontextprotocol/server-memory": "^2025.11.25",
    "@modelcontextprotocol/server-puppeteer": "^2025.5.12",
    "@modelcontextprotocol/server-sequential-thinking": "^2025.12.18",
    "chrome-devtools-mcp": "^0.15.1",
    "cloudinary": "^2.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stripe": "^20.1.1"
  },
  "overrides": {
    "@modelcontextprotocol/sdk": "$@modelcontextprotocol/sdk",
    "lodash-es": "^4.17.21"
  },
  "build": {
    "appId": "com.atlastrinity.app",
    "productName": "AtlasTrinity",
    "directories": {
      "output": "release"
    },
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "minimumSystemVersion": "26.3",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "files": [
      "dist/**/*",
      "design-system/**/*"
    ],
    "extraResources": [
      {
        "from": "src/brain",
        "to": "brain",
        "filter": [
          "**/*.py",
          "!**/__pycache__"
        ]
      },
      {
        "from": "providers",
        "to": "providers",
        "filter": [
          "**/*.py"
        ]
      },
      {
        "from": "src/mcp_server",
        "to": "mcp_server",
        "filter": [
          "**/*.py",
          "**/*.json",
          "!**/__pycache__"
        ]
      },
      {
        "from": "dist_venv",
        "to": ".venv",
        "filter": [
          "**/*",
          "!**/__pycache__",
          "!**/*.pyc"
        ]
      },
      {
        "from": "requirements.txt",
        "to": "requirements.txt"
      },
      {
        "from": ".env",
        "to": ".env"
      },
      {
        "from": "vendor/mcp-server-macos-use/.build/release/mcp-server-macos-use",
        "to": "bin/mcp-server-macos-use"
      },
      {
        "from": "config/config.yaml",
        "to": "config.yaml"
      }
    ]
  }
}